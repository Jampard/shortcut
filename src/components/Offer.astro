---
import Offers from '../components/Offers.astro'
---

<div id="pricing" class="p-10">
	<h2 class="pb-2 text-center text-7xl font-bold">Short now</h2>
	<p class="text-center text-xl">
		Elevate your short content to new standards. Upgrade your social impact to the next level.
	</p>
</div>
<div class="flex w-full justify-center bg-[url('/offer_bg.svg')] bg-cover bg-center">
	<Offers
		price="25"
		body={[
			'15 high quality shorts requests',
			'Creation of a personalised visual identity adapted to your brand and applied to all delivered short content',
			'Delivering strong story telling from all short extracted from your existing content',
			'Publication in all major social platforms at carefully chosen times'
		]}
		href="https://astro.build/chat/"
		call="Contactez-nous"
	/>
</div>
