---
import { Icon } from 'astro-icon'

interface Props {
	icon: string
	title: string
	description: string
}

const { icon, title, description } = Astro.props
---

<div class="flex flex-col align-middle">
	<Icon class="self-center" name={icon} size={72} />
	<h3 class="py-4 text-center text-2xl font-bold">{title}</h3>
	<p class="text-center">{description}</p>
</div>
