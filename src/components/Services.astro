---
import { Icon } from 'astro-icon'

interface Service {
  services: string[];
  icon: string[];
  title: string[];
  description: string[];
}

const { icon, title, description, services } = Astro.props;
---
<div class="container flex">
    <ul class="flex flex-row">
        {services.map((item) => (
          <li class="flex flex-col justify-center p-8 space-y-6">
            <span class="self-center">
            <Icon name={icon}  width="72" height="72"/>
            </span>
            <h3 class="text-4xl text-center	font-bold py-4">{title}</h3>
            <p class="text-center">{description}</p>
        </li>
        ))}
      </ul>
</div>