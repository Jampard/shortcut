const { services } = Astro.props;
---

<div class="container">
    <ul class="flex flex-row items-top">
        {services.map((service) => (
          <li class="flex flex-col justify-center p-8 space-y-6">
            <span class="self-center">
              <Icon name={service.icon} width="72" height="72"/>
            </span>
            <h3 class="text-4xl text-center font-bold py-4">{service.title}</h3>
            <p class="text-center">{service.description}</p>
          </li>
        ))}
    </ul>
</div>

